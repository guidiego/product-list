  "scripts": {
    "dev": "yarn dotenv -e ./.env nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "heroku-postbuild": "npm run build",
    "start": "node ./dist/server/index.js -p $PORT",
    "tsc": "tsc --project tsconfig.server.json --noEmit && tsc --noEmit",
    "lint": "eslint './src/server/**/*.{ts,tsx}' './src/pages/**/*.{ts,tsx}' './src/components/**/*.{ts,tsx}' --quiet",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_ENV=test STATIC_CACHE_URL=test/ jest",
    "test:watch": "npm run test -- --watch",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "@koa/router": "^9.3.1",
    "@types/mongoose": "^5.7.32",
    "classnames": "^2.2.6",
    "cross-env": "^7.0.2",
    "dotenv-cli": "^3.2.0",
    "koa": "^2.13.0",
    "koa-static": "^5.0.0",
    "mongoose": "^5.9.24",
    "next": "9.4.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "sass": "^1.26.10"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@svgr/webpack": "^5.4.0",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
